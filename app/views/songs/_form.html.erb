<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
<%= f.select "song[artist_id]", options_from_collection_for_select(Artist.all, :id, :name) %>
  <% if @song.artist.nil? %>
  <% else %>
    <%= f.hidden_field :artist_id %>
  <% end %>
  <br />

  <%= f.submit %>
<% end %>
